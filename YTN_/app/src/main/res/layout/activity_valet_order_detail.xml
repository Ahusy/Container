<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="code.ytn.cn.shop.controller.ValetOrderDetailActivity">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/ll1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户手机号:"
                android:textSize="14sp"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

            <TextView
                android:id="@+id/valetOrder_detail_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/text"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/home_more_textcolor"
            android:layout_margin="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="选择的商品:"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="5dp"/>

        <View
            style="@style/person_split_margin_left_right"
            android:layout_marginTop="10dp"/>

        <ListView
            android:id="@+id/valetOrder_detail_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <View
            style="@style/person_split_match"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingEnd="20dp"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="合计:"
                android:gravity="right"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"/>

            <TextView
                android:id="@+id/valetOrder_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="3.5元"/>

        </LinearLayout>

        <View
            style="@style/person_split_match"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingEnd="10dp"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/valetOrder_detail_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="7dp"
                android:text="　取消　"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_button"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"/>

            <TextView
                android:id="@+id/valetOrder_detail_commit"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="7dp"
                android:text="确定"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_button"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"/>

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
