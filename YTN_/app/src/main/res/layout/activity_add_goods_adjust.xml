<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="code.ytn.cn.shop.controller.AddGoodsAdjustActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/add_goods_adjust_recy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl">
    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:paddingEnd="10dp"
        android:paddingStart="12dp">

        <View
            style="@style/person_split_match"/>

        <TextView
            android:id="@+id/add_goods_adjust_cancel"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_button"
            android:gravity="center"
            android:padding="7dp"
            android:paddingEnd="0dp"
            android:paddingStart="10dp"
            android:text="@string/cancel1"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/add_goods_adjust_comit"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_button"
            android:gravity="center"
            android:padding="7dp"
            android:paddingEnd="0dp"
            android:paddingStart="10dp"
            android:text="@string/text_sure_k"
            android:textColor="@color/white"/>

    </RelativeLayout>

</RelativeLayout>
