<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="code.ytn.cn.home.controller.WarningManagerActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前货柜:"
            android:paddingEnd="10dp"
            android:paddingStart="0dp"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/warning_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/replment_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            />

    </LinearLayout>


    <View style="@style/person_split_matchs"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="@string/text_goods_name"
            android:paddingEnd="10dp"
            android:paddingStart="0dp"
            android:textSize="14sp"/>


        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="预警阈值"
            android:paddingEnd="10dp"
            android:paddingStart="0dp"
            android:gravity="right"
            android:layout_marginEnd="5dp"
            android:textSize="14sp"/>

    </LinearLayout>


    <ListView
        android:id="@+id/warning_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">
    </ListView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/replment_choose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#476480"
            android:gravity="center"
            android:text="@string/title_choose_goods"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/warning_commit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/comit_button"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="14sp"/>

    </LinearLayout>

</LinearLayout>
