<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="5dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_order_detail_img"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        fresco:actualImageScaleType="centerInside"/>

    <LinearLayout
        android:id="@+id/ll_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@+id/item_order_detail_img"
        android:orientation="vertical"
        android:layout_toStartOf="@+id/item_recy_add_goods_cb">

        <TextView
            android:id="@+id/item_recy_add_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/item_recy_add_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="14sp"/>

    </LinearLayout>

    <CheckBox
        android:id="@+id/item_recy_add_goods_cb"
        style="@style/CustomCheckBoxTheme"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:focusable="false"
        android:clickable="false"
        android:padding="10dp"/>

</RelativeLayout>
