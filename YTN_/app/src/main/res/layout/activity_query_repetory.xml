<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/query_repetory_ll"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    tools:context="code.ytn.cn.home.controller.QueryRepetoryActivity">

    <LinearLayout
        android:id="@+id/query_repetory_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            android:text="@string/text_goods_name"
            android:paddingEnd="10dp"
            android:paddingStart="0dp"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/text1"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:text="@string/text_counter_price"
            android:paddingEnd="10dp"
            android:paddingStart="0dp"
            android:textSize="14sp"
            android:gravity="right"
            tools:ignore="RtlHardcoded"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:text="@string/text_repertory_count"
            android:paddingEnd="10dp"
            android:paddingStart="0dp"
            android:gravity="right"
            android:textSize="14sp"
            tools:ignore="RtlHardcoded"/>

    </LinearLayout>

    <ListView
        android:id="@+id/query_repetory_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

</LinearLayout>
