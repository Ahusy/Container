            android:textSize="14sp"/>

        <TextView
            android:id="@+id/item_today_deal_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@+id/tv22"
            android:textSize="14sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingEnd="10dp"
            android:paddingStart="12dp"
            android:text="@string/text_yesToday_goods"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/item_yesterday_sell_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/v3"
            android:layout_toEndOf="@+id/tv3"
            android:textSize="14sp"/>

        <View
            android:id="@+id/v3"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/person_shopcar_split_line"
            />

        <TextView
            android:id="@+id/tv33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/v3"
            android:paddingEnd="10dp"
            android:paddingStart="12dp"
            android:text="@string/text_toDay_goods"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/item_today_sell_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@+id/tv33"
            android:textSize="14sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingEnd="10dp"
            android:paddingStart="12dp"
            android:text="@string/text_yesToday_miss_order"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/item_yesterday_miss_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/v4"
            android:layout_toEndOf="@+id/tv4"
            android:textSize="14sp"/>

        <View
            android:id="@+id/v4"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:background="@color/person_shopcar_split_line"
            />

        <TextView
            android:id="@+id/tv44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/v4"
            android:paddingEnd="10dp"
            android:paddingStart="12dp"
            android:text="@string/text_toDay_miss_order"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/item_today_miss_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@+id/tv44"
            android:textSize="14sp"/>
    </RelativeLayout>

