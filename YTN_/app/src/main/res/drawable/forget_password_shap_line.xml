<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
       >
    <item android:state_enabled="true">
        <shape android:shape="line">
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <stroke
                android:width="2dp"
                android:color="@color/dodgerblue" />

            <size android:width="20dp"
                  android:height="20dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="line">
            <solid android:color="@color/ic_button_unable"/>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <stroke
                android:width="2dp"
                android:color="@color/ic_button_unable" />

            <size android:width="20dp"
                  android:height="20dp" />
        </shape>
    </item>
</selector>