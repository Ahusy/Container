<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
       >
    <item android:state_enabled="true">
        <shape android:shape="oval">
            <solid android:color="@color/dodgerblue"/>
            <corners android:radius="5dp"/>
            <padding
                android:left="2dp"
                android:top="1dp"
                android:right="2dp"
                android:bottom="1dp" />
            <stroke
                android:width="1dp"
                android:color="@color/lightpink" />

            <size android:width="15dp"
                  android:height="15dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/ic_button_unable"/>
            <corners android:radius="5dp"/>
            <padding
                android:left="2dp"
                android:top="1dp"
                android:right="2dp"
                android:bottom="1dp" />
            <size android:width="15dp"
                  android:height="15dp" />
        </shape>
    </item>
</selector>